<!doctype html><html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <link rel="stylesheet" href="assets/style.css"/>
  <title>تسجيل الدخول</title>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="h1">تسجيل الدخول</div>
      <div class="muted">اسم المستخدم: الرقم التدريبي — كلمة المرور: آخر 4 أرقام من الهوية</div>
      <hr/>
      <div class="row">
        <input id="u" class="input" placeholder="الرقم التدريبي">
        <input id="p" class="input" type="password" placeholder="آخر 4 أرقام من الهوية">
      </div>
      <div style="margin-top:10px">
        <button id="btn" class="btn primary">دخول</button>
      </div>
      <div id="msg" class="msg"></div>
    </div>
  </div>

  <script src="assets/app.js"></script>
  <script>
    document.getElementById("btn").onclick = async () => {
      const trainee_id = document.getElementById("u").value.trim();
      const password = document.getElementById("p").value.trim();
      const msg = document.getElementById("msg");
      msg.className="msg";
      msg.textContent="";

      try{
        const data = await api("login",{ trainee_id, password });
        saveSession(data);
        location.href="dashboard.html";
      }catch(e){
        msg.className="msg err";
        msg.textContent=e.message;
      }
    };
  </script>
</body></html>
